<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/myeats_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이츠 시작하기"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/myeats_info2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 로그인하고"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/myeats_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/myeats_info3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무료배달과 기간 한정 쿠폰 혜택 놓치지 마세요."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/myeats_info2_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/myeats_login_1_tv"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="쿠팡 앱으로 간편 로그인"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/secondary"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/myeats_info3_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/myeats_login_2_tv"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="쿠팡 아이디(이메일)로 로그인"
        android:textColor="@color/deep_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/myeats_login_1_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/myeats_signup_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 회원이 아니신가요?"
        android:textColor="@color/deep_gray"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/myeats_login_2_tv"
        app:layout_constraintStart_toStartOf="@id/myeats_login_2_tv"
        app:layout_constraintEnd_toStartOf="@id/myeats_signup_btn_tv"
        />
    <TextView
        android:id="@+id/myeats_signup_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/secondary"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/myeats_login_2_tv"
        app:layout_constraintStart_toEndOf="@id/myeats_signup_info_tv"
        app:layout_constraintEnd_toEndOf="@id/myeats_login_2_tv"
        />



</androidx.constraintlayout.widget.ConstraintLayout>