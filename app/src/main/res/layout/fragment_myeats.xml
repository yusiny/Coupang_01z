<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myeats_loginarea_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/myeats_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:text="이츠 시작하기"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myeats_info2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="지금 로그인하고"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myeats_info_tv" />

        <TextView
            android:id="@+id/myeats_info3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="무료배달과 기간 한정 쿠폰 혜택 놓치지 마세요."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myeats_info2_tv" />

        <TextView
            android:id="@+id/myeats_login_1_tv"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@color/secondary"
            android:gravity="center"
            android:text="쿠팡 앱으로 간편 로그인"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myeats_info3_tv" />

        <TextView
            android:id="@+id/myeats_login_2_tv"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="쿠팡 아이디(이메일)로 로그인"
            android:textColor="@color/deep_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myeats_login_1_tv" />

        <TextView
            android:id="@+id/myeats_signup_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="아직 회원이 아니신가요?"
            android:textColor="@color/deep_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/myeats_signup_btn_tv"
            app:layout_constraintStart_toStartOf="@id/myeats_login_2_tv"
            app:layout_constraintTop_toBottomOf="@id/myeats_login_2_tv" />

        <TextView
            android:id="@+id/myeats_signup_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="회원가입"
            android:textColor="@color/secondary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/myeats_login_2_tv"
            app:layout_constraintStart_toEndOf="@id/myeats_signup_info_tv"
            app:layout_constraintTop_toBottomOf="@id/myeats_login_2_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myeats_user_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/myeats_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:text="김유신"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/myeats_phonenumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="010-***-0000"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myeats_username_tv" />

        <TextView
            android:id="@+id/myeats_logout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="로그아웃"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/myeats_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/myeats_banner"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/myeats_phonenumber_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/myeats_adress_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_adress"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/myeats_banner_iv"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/myeats_adress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="주소 관리"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/myeats_adress_iv"
            app:layout_constraintTop_toBottomOf="@id/myeats_banner_iv"
             />

        <ImageView
            android:id="@+id/myeats_favorite_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_heart_line"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/myeats_adress_iv"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/myeats_favorite_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="즐겨찾기"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/myeats_adress_iv"
            app:layout_constraintTop_toBottomOf="@id/myeats_adress_iv"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>