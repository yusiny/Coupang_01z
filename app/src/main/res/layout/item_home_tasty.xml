<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_tasty_store_img_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/tasty_crofle"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_tasty_store_title_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="크로플각 성남점"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_tasty_store_img_iv"
        app:layout_constraintStart_toStartOf="@id/item_tasty_store_img_iv" />
    <ImageView
        android:id="@+id/item_tasty_isCheetach_iv"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cheetach"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/item_tasty_store_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_tasty_store_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_tasty_store_title_tv"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/item_tasty_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_star"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tasty_store_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_tasty_store_title_tv" />
    <TextView
        android:id="@+id/item_tasty_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/item_tasty_star"
        app:layout_constraintStart_toEndOf="@id/item_tasty_star" />
    <TextView
        android:id="@+id/item_tasty_rate_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(412)  ·  1.2km  ·  배달비 "
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/item_tasty_star"
        app:layout_constraintStart_toEndOf="@id/item_tasty_rate" />
    <TextView
        android:id="@+id/item_tasty_delieveryFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/item_tasty_star"
        app:layout_constraintStart_toEndOf="@id/item_tasty_rate_sub" />
    <TextView
        android:id="@+id/home_tasty_delieveryFee_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/item_tasty_star"
        app:layout_constraintStart_toEndOf="@id/item_tasty_delieveryFee" />

    <TextView
        android:id="@+id/item_tasty_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-22분"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tasty_store_title_tv"
        app:layout_constraintEnd_toEndOf="@id/item_tasty_store_img_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>